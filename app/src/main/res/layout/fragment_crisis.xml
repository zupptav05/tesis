<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crisis_background"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EstÃ¡s en un lugar seguro"
        android:textColor="#455A64"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:alpha="0.8"/>

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inhala..."
        android:textColor="#263238"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:elevation="10dp"/>

    <View
        android:id="@+id/view_breathing_circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/breathing_circle"
        android:layout_centerInParent="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stop_crisis"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Ya me siento mejor"
        android:textSize="18sp"
        android:textColor="#5E35B1"
        android:backgroundTint="#FFFFFF"
        app:cornerRadius="32dp"
        app:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>